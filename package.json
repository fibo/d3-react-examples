{
  "name": "d3-react-examples",
  "version": "1.0.0",
  "description": "code samples using D3 and React",
  "main": "index.js",
  "private": true,
  "scripts": {
    "browserify_line-chart-01": "cross-env NODE_ENV=production browserify src/line-chart-01/index.js -t babelify -g [ envify --NODE_ENV production ] -g uglifyify | uglifyjs --compress --mangle > docs/line-chart-01/bundle.js",
    "example_line-chart-01": "rimraf docs/line-chart-01/bundle.js; budo src/line-chart-01/index.js --dir docs/line-chart-01 --open --live --serve bundle.js -- -t babelify -x react -x react-dom",
    "lint": "standardx",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pre-commit": [
    "lint"
  ],
  "standardx": {
    "global": [
      "React",
      "ReactDOM"
    ],
    "parser": "babel-eslint"
  },
  "eslintConfig": {
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fibo/d3-react-examples.git"
  },
  "keywords": [
    "d3",
    "react"
  ],
  "author": {
    "name": "Gianluca Casati",
    "url": "http://g14n.info"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fibo/d3-react-examples/issues"
  },
  "homepage": "http://g14n.info/d3-react-examples",
  "dependencies": {
    "d3-array": "^2.2.0",
    "d3-scale": "^3.0.0",
    "d3-shape": "^1.3.5"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.3",
    "standardx": "^3.0.1",
    "zeroconf-redux": "^4.9.0"
  }
}
